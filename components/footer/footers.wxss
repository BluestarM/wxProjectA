/* components/footer/footers.wxss */

.main_footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #F7F7F7;
  color: #999;
  z-index: 999;
}

.footer_content {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  width: 25%;
  height: 100%;
  font-size: 28rpx;
}

.footer_content image {
  display: block;
  width: 60rpx;
  height: 60rpx;
}

.active_tab {
  color: #2294F9;
}