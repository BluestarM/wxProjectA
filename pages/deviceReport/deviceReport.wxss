/* pages/deviceReport/deviceReport.wxss */
page {
  height: 100%;
}

.page_container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-bottom: 120rpx;
}

.search_report {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #efefef;
  z-index: 999;
  background: #fff;
}

.info_device {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 70rpx;
  padding-left: 40rpx;
}

.info_top {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
}

.search_img {
  display: block;
  width: 50rpx;
  height: 50rpx;
  padding-right: 40rpx;
}

.calendar_img {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.info_top text {
  margin-right: 20rpx;
}

.report_main {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background: #fff;
}

.report_line {
  width: 100%;
  height: 24rpx;
  background: #F7F7F7;
}

.report_list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 92%;
  padding: 20rpx 4%;
}

.report_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}

.open_report {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.title_img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.report_left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 92%;
}

.report_left image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.date_time text {
  height: 35rpx;
  padding: 4rpx 16rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  background: #F7F7F7;
  border-radius: 18rpx;
}
.report_info_all{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 82%;
}
.report_info {
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 28rpx;
}

.report_name_list {
  display: flex;
  margin-bottom: 10rpx;
  padding-right: 8rpx;
}

.report_group {
  padding: 0 30rpx;
  color: #fff;
  border-radius: 8rpx;
  /* background: #5BFF4F; */
}

.report_status {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 84%;
  font-size: 28rpx;
}

.report_content {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 26rpx;
}

.report_num2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #2294F9 !important;
}

.report_unit {
  margin-left: 6rpx;
  font-size: 26rpx;
}

.bor_bottom {
  width: 100%;
  height: 2rpx;
  background: #efefef;
}

.none_bottom {
  border-bottom: none;
}

.down_img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}


.swiper {
  position: relative;
  height: 88%;
}

.read_swiper {
  display: block;
  width: 100%;
  height: 100%;
}

.ceshi_next {
  position: fixed;
  top: 50%;
  right: 20rpx;
  transform: translate(0, -50%);
}

.ceshi_img {
  display: block;
  width: 70rpx;
  height: 70rpx;
}

.ceshi_prew {
  position: fixed;
  top: 50%;
  left: 20rpx;
  transform: translate(0, -50%);
}

.show_total {
  position: fixed;
  bottom: 140rpx;
  left: 43%;
  padding: 6rpx 20rpx;
  border-radius: 40rpx;
  background: rgba(0, 0, 0, 0.63);
  opacity: 0.6;
  filter: alpha(opacity=60);
}

.show_total text {
  color: #fff;
}