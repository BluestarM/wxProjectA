/* pages/analysis/analysis.wxss */
.page_container {
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.info_top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
  border-bottom: 1px solid #efefef;
  background: #fff;
}

.calendar_img {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.info_top text {
  margin-right: 20rpx;
}

.report_main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 70rpx;
  background: #fff;
}

.report_line {
  width: 100%;
  height: 24rpx;
  background: #F7F7F7;
}

.report_list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 92%;
  padding: 20rpx 4%;
}

.report_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}

.open_report {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.title_img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.report_left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 92%;
}

.report_left image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.date_time text {
  height: 35rpx;
  padding: 4rpx 16rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  background: #F7F7F7;
  border-radius: 18rpx;
}

.report_info {
  display: flex;
  align-items: center;
  width: 84%;
  height: 60rpx;
  font-size: 28rpx;
}

.report_content {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 26rpx;
}

.report_num2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #2294F9 !important;
}

.report_unit {
  font-size: 24rpx;
}

.none_bottom {
  border-bottom: none;
}