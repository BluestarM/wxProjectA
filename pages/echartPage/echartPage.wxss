/* pages/echartPage/echartPage.wxss */
.page_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 420rpx;
  width: 780rpx;
}

ec-canvas {
  width: 100%;
  height: 92%;
}

.search_report {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.info_top {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
}

.info_top text {
  margin-right: 20rpx;
}

.wx-switch-input {
  zoom: .7
}

/* 开始的样式 */
.wx-switch-input {
  width: 50rpx !important;
  height: 30rpx !important;
  background: #2294F9 !important;
  border: #2294F9 !important;
  box-sizing: border-box;
}

/* false的样式 */
.wx-switch-input::before {
  width: 50rpx !important;
  height: 30rpx !important;
  border: 1rpx solid #ededed;
  background: #999 !important;
}

/* true的样式 */
.wx-switch-input::after {
  width: 30rpx !important;
  height: 30rpx !important;
}