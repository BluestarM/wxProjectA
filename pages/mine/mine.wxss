/* pages/mine/mine.wxss */
page {
  background: #fff;
}

.page_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  margin-bottom: 3.2vw;
}

.mine_list {
  display: flex;
  flex-direction: column;
  width: 90%;
  padding: 0 5%;
}

.list_info {
  display: flex;
  align-items: center;
  width: 100%;
  height: 116rpx;
  font-size: 32rpx;
  color: #000;
  border-bottom: 1rpx solid #efefef;
}

.list_info text {
  width: 40%;
}

.list_info view {
  width: 60%;
}

.log_out {
  margin-top: 200rpx;
  font-weight: 400;
  color: #fff;
  background: #2294F9;
}