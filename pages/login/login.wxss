/* pages/login/login.wxss */
page {
  background: #fff;
}

.page_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

.mine_list {
  display: flex;
  flex-direction: column;
  width: 90%;
  padding: 0 5%;
}

.list_info {
  display: flex;
  align-items: center;
  width: 100%;
  height: 116rpx;
  font-size: 32rpx;
  color: #000;
  border-bottom: 1rpx solid #efefef;
}

.list_info text {
  width: 40%;
}

.list_info view {
  width: 60%;
}

.login_btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin: auto;
}

.login_btn button {
  width: 40% !important;
  margin-top: 200rpx;
  font-weight: 400;
}

.log_out {
  color: #fff;
  background: #2294F9;
}

.login_title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  margin-top: 20px
}

.login_title image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.login_title text {
  color: #375D9A;
  font-size: 48rpx;
  font-weight: bold;
}